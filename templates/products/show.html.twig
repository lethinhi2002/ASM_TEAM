{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1 style="color: #5eb5e0; size: 5px; text-align: center;"><u>PRODUCT INFORMATION</u>
    </h1>
    <div style="background: cornsilk" class="row">
        <div class="col-5">
            <img style="width: 550px" src="{{ asset(product.image) }}" alt="Symfony!"/>
        </div>
        <div class="col-7">


            <table class="table">
                <tbody>

                <tr>
                    <th style="color: #B0413E; padding-left: 2px">Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th style="color: #B0413E; padding-left: 2px">Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th style="color: #B0413E; padding-left: 2px">Content</th>
                    <td>{{ product.content }}</td>
                </tr>


                </tbody>
            </table>
            <div class="button_group">
                <button style="color: red; background-color: #5eb5e0; border-radius: 5px;" class="button add-cart"
                        type="button">Add To Cart
                </button>
                </button>
                <button class="button compare" type="button"><i style="color: red" class="fa fa-exchange"></i></button>
                <button class="button wishlist" type="button"><i style="color: red" class="fa fa-heart-o"></i></button>

                <div style="color: red; padding-top: 20px;"> {{ include('products/_delete_form.html.twig') }}</div>
                <div style="padding-top: 20px">

                    <button style="border-radius: 5px;"><a href="{{ path('app_products_edit', {'id': product.id}) }}"class='btn btn-default'>edit</a>
                    </button>
                </div>
                <div style="padding-top: 20px">
                    <button style="border-radius: 5px"><a href="{{ path('app_products_index') }}"class='btn btn-default'>back to list</a>
                    </button>
                </div>

            </div>

        </div>

    </div>

    {#    <a href="{{ path('app_products_index') }}" style="padding-left: 350px">back to list</a> #}

